    <nav id="nav-bar">
      <a href="/albums/{{artistId}}?artist={{artist}}"> ‚Üê Go back</a>
    </nav>
  </header>
  <div>
    <h1>Tracks: {{albumId}}</h1>
    {{#each items}}
    <div class="track-card">
      <div class="card-container-track">
        <p>{{name}}</p>
      </div>          
      <div class="card-container">
        <figure>
          <audio controls src={{preview_url}}></audio>
        </figure>
      </div>
    </div>
    {{/each}}
  </div>
